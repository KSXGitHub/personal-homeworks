body
  font-family 'Roboto', 'Product Sans', 'Segoe UI', 'Verdana', 'Geneva', 'Arial', 'Helvetica', sans-serif

:not(b):not(.bold)
  font-weight normal

:not(i):not(.italic)
  font-style normal

:not(u):not(.underline)
  text-decoration none

#control-panel *
  display inline-block

#list
  &, & li
    display block
    width 100%
  li
    *
      display inline-block
    .delete
      position absolute
      right 10px
